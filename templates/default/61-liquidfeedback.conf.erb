alias.url += ( "/<%=@organisation%>/fastpath/" => "<%= @lf_dir %>/liquid_feedback_frontend/fastpath/",
               "/<%=@organisation%>/static"    => "<%= @lf_dir %>/liquid_feedback_frontend/static",
               "/<%=@organisation%>"           => "<%= @lf_dir %>/webmcp/cgi-bin" )

# Configure environment for demo application
$HTTP["url"] =~ "^/<%=@organisation%>" {
  setenv.add-environment += (
    "LANG" => "en_US.UTF-8",
    "WEBMCP_APP_BASEPATH" => "<%= @lf_dir %>/liquid_feedback_frontend/",
    "WEBMCP_CONFIG_NAME"  => "myconfig")
}

# URL beautification
url.rewrite-once += (
  # do not rewrite static URLs
      "^/<%=@organisation%>/fastpath/(.*)$" => "/<%=@organisation%>/fastpath/$1",
      "^/<%=@organisation%>/static/(.*)$"   => "/<%=@organisation%>/static/$1",

  # dynamic URLs
      "^/<%=@organisation%>/([^\?]*)(\?(.*))?$" => "/<%=@organisation%>/webmcp-wrapper.lua?_webmcp_path=$1&$3",

)

$HTTP["url"] =~ "^/<%=@organisation%>/fastpath/" {
  cgi.assign = ( "" => "" )
  setenv.add-response-header = ( "Cache-Control" => "private; max-age=86400" )
}

